{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react-jsx",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@components/*": ["src/components/*"],
      "@components": ["src/components"],
      "@utils/*": ["src/utils/*"],
      "@utils": ["src/utils"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
